#accessabar {
    font-family: var(--main-font);
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 998;
}

#accessabar .bar {
    grid-area: bar;
    background: var(--light-grey);
    box-shadow: 0 2px 2px var(--shadow-grey);
    width: 100%;
    padding: 0.5rem;

    .bar-container {
        background: var(--near-white);
        padding: 0.25em;
        position: relative;
    }
}

#accessabar .underbar {
    grid-area: underbar;
    display: grid;
    grid-template-columns: 1fr 6fr 1fr;
    grid-template-areas: "hide-button prompt filler";
    width: 100%;
}

#accessabar .menu-area {
    grid-area: menu-area;
}

#accessabar .filler {
    grid-area: filler;
}
