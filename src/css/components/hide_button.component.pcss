#accessabar .hide-button {
    outline: none;
    border: none;
    background: var(--light-grey);
    padding: 0 0.5em;
    box-shadow: 0 2px 2px var(--shadow-grey);
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    color: var(--alt-font-colour);
    margin-top: -1px;

    &:hover, &:focus {
        cursor: pointer;
    }
}
