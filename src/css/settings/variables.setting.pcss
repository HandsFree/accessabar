:root {
    --main-font: 'Noto Sans', sans-serif;
    --header-font: 'Questrial', sans-serif;

    --font-colour: var(--near-white);
    --alt-font-colour: var(--near-black);

    --dark-grey: #222;
    --border-grey: #333;
    --lighter-grey: #444;
    --shadow-grey: #666;
    --light-grey: #d8d8d8;
    --blue-focus: #2979ff;
    --dark-red: #a51c1c;
    --lighter-red: #c32020;

    --near-black: #111;
    --near-white: #fcfcfc;
}
